
.wrapper {
		width: 100% !important;
		padding-top: 60rpx;
		padding-left: 10rpx;
		padding-right: 10rpx;
		margin-left: 30rpx;
		margin-top: 0 !important;
		padding-bottom: 0 !important;
		margin-left: 0 !important;
		overflow: hidden;
		display: flex;
		flex-direction: column
}
.cover {
		width: 100%;
}
.favorIcon {
		width: 30rpx;
		height: 30rpx;
}
.image {
		border-radius: 20rpx;
		width: 100%;
}
.text {
		display: inline-block;
		width: 100%;
		font-size: 20rpx;
		white-space: nowrap !important;
